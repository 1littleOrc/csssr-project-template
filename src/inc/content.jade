mixin li(tool, desc)
	li.list__item
		span.mark= tool
		|  - 
		= desc

mixin li_file(file)
	li.list__item.list__item_file= file

mixin li_folder(folder, files)
	li.list__item.list__item_folder= folder
		if files
			ul.list.list_files
				each file in files
					+li_file(file)

