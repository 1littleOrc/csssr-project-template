@import url('//fonts.googleapis.com/css?family=Cuprum:400,700&subset=latin,cyrillic')
@import 'normalize'
@import 'sprite'

body
	padding 20px 0
	color #000
	font-family cuprum, sans-serif
	background #f0f0f0 url(../img/chruch.png)

.main
	padding 20px
	max-width 500px
	font-size 16px
	border-radius 4px
	background #fff
	box-shadow 0 0 8px rgba(0, 0, 0, .5)

	@media screen and (max-width: 540px)
		margin 0 20px
	
	@media screen and (min-width: 541px)
		margin 0 auto
	
	&::selection
		background #ffffd0

.logo
	height 180px
	background url(../img/logo.jpg) 50% -20px no-repeat
	margin 0 -20px

.h1
	margin 0 -20px 20px
	padding 20px
	font-size 28px
	font-weight bold
	text-align center

.h2
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.h3
	margin-bottom 10px
	font-size 18px
	font-weight bold

.description
	margin-bottom 40px
	font-size 18px
	text-align center

.mark
	padding 0 4px
	font-weight bold
	text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
	border-radius 4px
	background #e8e8e8
	
	&::selection
		background rgba(0, 0, 0, .1)

.container
	@media screen and (min-width: 541px)
		display table

.col
	@media screen and (max-width: 540px)
		display table
		margin 0 auto 20px

	@media screen and (min-width: 541px)
		display table-cell
		vertical-align top
		width 1%

.arrow
	margin 0 auto

	@media screen and (max-width: 540px)
		sprite($arrow-270)
	
	@media screen and (min-width: 541px)
		sprite($arrow)

	&-caption
		color #579eda
		font-size 14px
		text-align center

		@media screen and (min-width: 541px)
			margin-top 84px

.list
	margin-bottom 20px
	list-style inside

	&_type_files
		margin 0 0 0 10px
		list-style none

	&_margin_no
		margin 0

	&__item
		margin-left 10px
		line-height 24px

		&_type
			&_folder
				&:before
					display inline-block
					vertical-align middle
					margin-right 6px
					content ''
					sprite($folder)

			&_file
				&:before
					display inline-block
					vertical-align middle
					margin-right 6px
					content ''
					sprite($document-code)

.copyright
	margin 30px -20px -20px
	padding 20px
	border-radius 0 0 4px 4px

.dark
	color #fff
	text-shadow 1px 1px 2px #000
	background #222 url(../img/vertical_cloth.png)
	box-shadow inset 0 0 10px rgba(255, 255, 255, .25)

	&::selection
		background rgba(0, 0, 0, .25)

.fork-on-github
	&::selection
		background transparent

	@media screen and (min-width: 541px)
		position absolute
		top 0
		right 0
		display block
		height 200px
		width 200px
		overflow hidden

	&__link
		display block
		padding 5px 40px
		font bold 1rem/2rem arial, sans-serif
		font-weight bold
		text-align center
		text-decoration none
		transition background .25s ease-out, color .25s ease-out

		@media screen and (max-width: 540px)
			margin-top 40px
			color #e74c3c
			border-radius 4px

			&:active
				transform scale(.975)

		@media screen and (min-width: 541px)
			position absolute
			top 50px
			right -54px
			width 250px
			color #fff
			background #222 url(../img/vertical_cloth.png)
			box-shadow 0 0 8px rgba(0, 0, 0, 0.5)
			transform rotate(45deg)

			&:before
			&:after
				position absolute
				top 1px
				left 0
				display block
				height 1px
				width 100%
				background #fff
				content ''
			
			&:after
				bottom 1px
				top auto

		&:hover
			color #fff
			background #e74c3c
