@import url(http://fonts.googleapis.com/css?family=Cuprum:400,700&subset=latin,cyrillic)
@import 'normalize'

body
	background #f0f0f0 url(../img/chruch.png)
	color #000
	font-family cuprum, sans-serif
	line-height 1

.main
	width 500px
	margin 20px auto
	font-size 16px
	border-radius 4px
	background #fff
	padding 20px
	box-shadow 0 0 8px rgba(0, 0, 0, .5)
	&::selection
		background #ffffd0

.logo
	background url(../img/logo.jpg) 50% -20px no-repeat
	height: 180px;

.h1
	font-size 28px
	font-weight bold
	margin-bottom 20px
	text-align center
	margin 0 -20px 20px
	padding 20px

.h2
	font-size 20px
	font-weight bold
	margin-bottom 20px
	text-align: center;

.h3
	font-size 18px
	font-weight bold
	margin-bottom 10px

.mark
	padding 0 4px
	border-radius 4px
	font-weight bold
	background #e8e8e8
	text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
	&::selection
		background rgba(0, 0, 0, .1)

.container
	&:before
	&:after
		content ''
		clear both
		float none
		display block

.col
	float left
	width 33%

.arrow
	background url(../img/arrow.png)
	height 32px
	width 32px
	margin: 0 auto
	&-caption
		margin-top 72px
		color #579eda
		font-size 14px
		text-align center

.list
	list-style inside
	margin-bottom 20px
	&_files
		list-style none
		margin 0 0 0 10px
	&__item
		margin-left 10px
		line-height 24px
		&_folder
			&:before
				content ''
				background url(../img/folder.png) no-repeat
				height 16px
				width 16px
				margin-right 6px
				display inline-block
				vertical-align middle
		&_file
			&:before
				content ''
				background url(../img/document-code.png) no-repeat
				height 16px
				width 16px
				margin-right 6px
				display inline-block
				vertical-align middle
			

.copyright
	border-radius 0 0 4px 4px
	margin 30px -20px -20px
	padding 20px

.dark
	background #222 url(../img/vertical_cloth.png)
	color #fff
	box-shadow inset 0 0 10px rgba(255, 255, 255, .25)
	text-shadow 1px 1px 2px #000
	&::selection
		background rgba(0, 0, 0, .25)